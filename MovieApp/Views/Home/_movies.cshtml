@using MovieApp.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model IEnumerable<Movie>
<!--_movies.cshtml sayfa içinde Repository ler üzerinden movies leri alabilmem için  liste tipinde bir model oluşturdum. -->

@foreach (var movie in Model)
{
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@movie.ImageUrl" alt="@movie.Description" class="card-img" />
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">@movie.Name</h5>
                    <p class="card-text">
                        @movie.Description
                    </p>
                    <p class="card-text">
                        <small class="text-muted">3 days ago</small>
                    </p>
                </div>
            </div>
        </div>

    </div>
}











